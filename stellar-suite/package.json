{
  "name": "stellar-suite",
  "displayName": "Stellar Suite",
  "description": "Helpful tools for stellar and soroban ecosystem",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stellar-suite",
          "title": "Stellar Suite",
          "icon": "media/stellar-icon.svg"
        }
      ]
    },
    "views": {
      "stellar-suite": [
        {
          "id": "commandBuilder",
          "name": "Command Builder"
        },
        {
          "id": "commandHistory",
          "name": "Command History"
        }
      ]
    },
    "commands": [
      {
        "command": "stellar-suite.refreshCommandHistory",
        "title": "Refresh Command History",
        "icon": "$(refresh)"
      },
      {
        "command": "stellar-suite.runHistoryCommand",
        "title": "Run Command",
        "icon": "$(play)"
      },
      {
        "command": "stellar-suite.openCommandBuilder",
        "title": "Open Soroban Command Builder"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "stellar-suite.refreshCommandHistory",
          "when": "view == commandHistory",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "stellar-suite.runHistoryCommand",
          "when": "view == commandHistory && viewItem == commandHistoryItem",
          "group": "inline"
        }
      ]
    },
    "languages": [
      {
        "id": "log",
        "aliases": [
          "Log"
        ],
        "extensions": [
          ".log"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
