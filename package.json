    "directory": "sora"
  },
  "scripts": {
    "dev": "nextron",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:main": "cd main && npm run dev",
    "build": "nextron build",
    "build:mac": "nextron build --mac",
    "build:mac:universal": "nextron build --mac --universal",
    "build:linux": "nextron build --linux",
    "build:win32": "nextron build --win --ia32",
    "build:win64": "nextron build --win --x64",
    "build:production": "NODE_ENV=production nextron build",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder",
    "release:production": "NODE_ENV=production electron-builder",
    "lint": "cd renderer && npm run lint",
    "lint:fix": "cd renderer && npm run lint:fix",
    "type-check": "cd renderer && npm run type-check",
    "test": "cd renderer && npm run test",
    "test:watch": "cd renderer && npm run test:watch",
    "test:coverage": "cd renderer && npm run test:coverage",
    "clean": "rm -rf dist app .next node_modules/.cache",
    "clean:all": "rm -rf dist app .next node_modules/.cache node_modules",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security:check": "npm audit --audit-level moderate",
    "deps:update": "npm update",
    "deps:check": "npm outdated",
    "precommit": "npm run lint && npm run type-check && npm run test",
    "prebuild": "npm run lint && npm run type-check"
  },
